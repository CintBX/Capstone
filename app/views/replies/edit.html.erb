<h1 class="title is-2 has-text-grey">Edit this reply</h1>

<%= simple_form_for([@discussion, @reply]) do |form| %>
	<div class="field">
		<div class="control">
			<%= form.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>

	<%= form.button :submit, "Update reply", class: 'button is-info' %>
<% end %>