<%= simple_form_for([@discussion, @discussion.replies.build], remote: true) do |form| %>
	<div class="field">
		<div class="control">
			<%= form.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>

	<%= form.button :submit, "Leave a reply", class: 'button is-info' %>
<% end %>