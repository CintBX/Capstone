<div class="column is-3 is-offset-2 margin-top">
	<h3 class="title is-5 has-text-grey-light">Discussion Channels</h3>

	<ul class="list">
		<% @channels.each do |c| %>
			<li><%= link_to c.channel, c %></li>
		<% end %>
	</ul>

	<br>

	<% if has_role?(:admin) %>
		<%= link_to 'New Channel', new_channel_path, class: 'button is-info' %><br/>
		<%= link_to 'View All Channels', channels_path, class: 'button is-success button-seperate' %>
	<% end %>

	<h3 class="title is-5 has-text-grey-light margin-top-plus">Site Navigation</h3>
	<%= render 'sidebar_nav' %>
</div>