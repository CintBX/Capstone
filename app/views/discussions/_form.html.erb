<%= simple_form_for(@discussion) do |form| %>
  <% if discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% discussion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <div class="control">
      <%= form.input :title, required: true, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.input :content, required: true, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
    </div>
  </div>

  <div class="field">
    <label class="label">Channel</label>    
    <div class="control has-icons-left">
      <span class="select">
        <%= form.input_field :channel_id, collection: @channels.map { |c| [c.channel, c.id] }, prompt: "Select channel" %>
      </span>

      <span class="icon is-small is-left">
        <i class="fa fa-tag"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.button :submit, class: 'button is-info' %>
    </div>
  </div>
<% end %>