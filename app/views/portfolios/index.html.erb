<%= render 'shared/navbar' %>

<%= render 'shared/header' %>

<h1>Portfolios</h1>

<table>
	<% @portfolios.each do |portfolio| %>
		<tr>
			<td><%= link_to portfolio.title, portfolio_path(portfolio) %></td>
			<td><%= link_to "Edit", edit_portfolio_path(portfolio) %></td>
			<td><%= link_to "Delete", portfolio_path(portfolio), method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>
	<% end %>
</table>

<br>
<%= link_to "Create Portfolio", new_portfolio_path %>

<%= link_to "Log out", destroy_user_session_path, method: :delete, id: 'Log out' if current_user %>

<%= render 'shared/footer' %>