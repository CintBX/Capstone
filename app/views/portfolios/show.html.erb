<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-7">
			<p><%= image_tag "freelance_2.jpg", width: '100%' %></p>
		</div>

		<div class="col-md-5">
			<h1><%= @portfolio_item.title.upcase %></h1>
			<hr>
			<em><%= @portfolio_item.subtitle %></em>
			<p><%= @portfolio_item.body %></p>
			<hr>
			<h3>Technologies Used:</h3>
			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>

			<% if has_role?(:admin) %>
				<%= link_to "Edit", edit_portfolio_path(@portfolio_item) %> /
				<%= link_to "Delete", portfolio_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
		</div>
	</div>
</div>